<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haibeiapp.ui.frg.LognFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:hint="邮箱或手机号"
        android:singleLine="true"
        android:layout_marginLeft="25dp"
        android:background="@drawable/edittext_shape"
        android:layout_marginRight="25dp"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_yanzhengna"
        android:hint="验证码"
        android:singleLine="true"
        android:background="@drawable/edittext_shape"
        android:padding="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et_username"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:hint="密码"
        android:singleLine="true"
        android:background="@drawable/edittext_shape"
        android:padding="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et_yanzhengna"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_sltpassword"
        android:src="@drawable/btn_slt"
        android:scaleType="fitXY"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示密码"
        android:id="@+id/tv_pas"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:layout_alignBaseline="@+id/iv_sltpassword"
        android:layout_below="@+id/iv_sltpassword"
        android:layout_toRightOf="@+id/iv_sltpassword"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/btn_loading"
        android:text="注册"
        android:layout_below="@+id/iv_sltpassword"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_loading"
        android:layout_marginTop="20dp"
        android:id="@+id/ll_xxxxx">
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#cccccc"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="您也可以"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#cccccc"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@+id/ll_xxxxx"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_appwx_logo"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
