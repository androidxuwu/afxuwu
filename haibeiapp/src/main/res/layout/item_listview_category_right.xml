<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/ll_category_listviet_right"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_category_listview_right"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_category_listview_right"
        android:text="护肤个护"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_category_listview_right"
        android:layout_toEndOf="@+id/iv_category_listview_right"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
         />
</RelativeLayout>